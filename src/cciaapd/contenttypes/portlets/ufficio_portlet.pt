<dl class="portlet portletUfficio"
    i18n:domain="plone"
    tal:define="results view/results">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile" tal:content="view/data/portlet_title"/>
        <span class="portletTopRight"></span>
    </dt>


    <dd class="portletItem"
        tal:repeat="result results">
        <div class="officeTitle" tal:condition="python:result.Title or result.location">
            <div tal:condition="result/Title">
               <strong tal:content="result/Title"/>
            </div>

            <div tal:condition="result/location"
               tal:define="formatted_location python: view.format_location_text(result)" tal:content="structure formatted_location">
                text here
            </div>
        </div>

        <div tal:condition="result/office_timetable">
          <strong>Orari</strong>
          <ul>
            <li tal:repeat="time result/office_timetable">
              <span tal:content="time" />
            </li>
          </ul>
        </div>

        <div class="officePhone" tal:condition="python:result.phone or result.fax or result.email">
            <div tal:condition="result/phone">
              <strong>Tel</strong>
              <span tal:content="result/phone"></span>
            </div>

            <div tal:condition="result/fax">
              <strong>Fax</strong>
              <span tal:content="result/fax"></span>
            </div>

            <div tal:condition="result/email">
              <strong>Email</strong>
              <a tal:attributes="href string:mailto:${result/email};
                               title result/email"
               tal:content="result/email" />
            </div>

            <div tal:condition="result/pec">
              <strong>Pec</strong>
              <a tal:attributes="href string:mailto:${result/pec};
                               title result/pec"
               tal:content="result/pec" />
            </div>
        </div>

        <p>
        </p>
        <a class="officeLink" href=""
           tal:attributes="href string:${result/absolute_url}/view;
                           title result/Description">
                           Guarda la scheda dell'ufficio
        </a>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
